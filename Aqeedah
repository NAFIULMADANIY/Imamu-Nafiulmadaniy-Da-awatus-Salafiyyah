  <script>
    function toggleLanguage() {
      const elements = document.querySelectorAll('[data-en]');
      const currentLang = localStorage.getItem('lang') || 'en';
      let nextLang = 'ar';
      if (currentLang === 'ar') nextLang = 'ha';
      else if (currentLang === 'ha') nextLang = 'en';
      localStorage.setItem('lang', nextLang);

      elements.forEach(el => {
        el.innerText = el.getAttribute(`data-${nextLang}`);
      });
    }

    window.addEventListener('DOMContentLoaded', () => {
      toggleLanguage(); // auto-detect or fallback to local
    });
  </script>
